# CodeAgent Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
POSTGRES_PASSWORD=changeme123
DATABASE_URL=postgresql://codeagent:changeme123@postgres:5432/codeagent

# Redis Configuration
REDIS_PASSWORD=changeme123
REDIS_URL=redis://:changeme123@redis:6379/0

# Authentication
JWT_SECRET_KEY=your-super-secret-key-change-in-production-use-long-random-string
SECRET_KEY=your-super-secret-key-change-in-production-use-long-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AINative API Configuration
AINATIVE_API_KEY=your-ainative-api-key-here
AINATIVE_BASE_URL=https://api.ainative.studio/api/v1

# Ollama Configuration
OLLAMA_BASE_URL=http://ollama:11434

# Monitoring
GRAFANA_PASSWORD=admin123

# Frontend Configuration
REACT_APP_API_BASE_URL=http://localhost:8000

# Application Settings
ENVIRONMENT=production
PORT=8000

# GitHub OAuth (optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Upload Limits
MAX_FILE_SIZE=10MB
MAX_PROJECT_SIZE=100MB

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log